<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle" >
			<solid android:color="@color/main_selection"/>
			<corners android:radius="5dp" />
			<stroke android:width="1dp" android:color="@color/main_selection_border"/>
		</shape>
	</item>
	<item android:state_pressed="false" android:drawable="@drawable/warning" />
</selector>

